<!-- Hero Section Begin -->
<section class="hero">
    <div class="hero__slider owl-carousel">

        {{#each banners}}
        {{#if this.status}}
        <div class="hero__items set-bg" data-setbg="/uploads/{{this.image.[0]}}">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-7 col-md-8">
                        <div class="hero__text">
                            <h6>{{this.smallLabel}}</h6>
                            <h2>{{this.title}}</h2>
                            <p style="color: white;" >{{this.description}}</p>
                            <a href="/collection/{{this.sub_category_id}}" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
       {{/if}}
{{/each}}

    </div>
</section>
<!-- Hero Section End -->

<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Shop For Our Latest Collection</span>
                    <h2>Fashion New Trends</h2>
                </div>
            </div>
        </div>
        <div class="row">
            {{#each CollectionCard}}
            {{#if this.status}}
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="blog__item">
                    <div class="blog__item__pic set-bg" data-setbg="/uploads/{{this.image.[0]}}"></div>
                    <div class="blog__item__text">
                     
                        <h5>{{this.title}}</h5>
                        <a href="/collection/{{this.sub_category_id}}">Shop Now</a>
                    </div>
                </div>
            </div>
           {{/if}}
      {{/each}}

        </div>
    </div>
</section>

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-12">
                
            </div>
        </div>
        <div class="row product__filter">


            {{#each products}}
            <div class="col-6 col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6  mix new-arrivals">

                <div class="product__item">
                    <div onclick="location.href='/product-details/{{this._id}}';" class="product__item__pic set-bg"
                        data-setbg="uploads/{{this.images.[0]}}" >
                        {{#if this.offer}}
                        <span style="background-color: darkorange;" class="label" >{{this.offer}}% OFF</span>
                         {{!-- {{else}} --}}

                  {{/if}}
                        <ul class="product__hover">
                            {{!-- <li><a href="#"><img src="/img/icon/heart.png" alt=""></a></li>
                            <li><a href="#"><img src="/img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                            <li><a href="#"><img src="/img/icon/search.png" alt=""></a></li> --}}
                        </ul>
                    </div>


                    <div class="product__item__text">
                        <h6>{{this.name}}</h6>
                        <a style="cursor: pointer;" class="add-cart">
                             <button style="border:none ;color: rgb(255, 0, 0); background-color:rgba(0, 0, 0, 0);" onclick="addToCart('{{this._id}}')"  > + Add To Cart  </button>   </a> 

                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>

                   {{#if this.offer_status}}
                  <div class="row">
                   <div class="col" >
         <h5 style="text-decoration: line-through;" > ₹{{this.price}}</h5>
                   </div>
                      
                 <div class="col" >
                      <h5> ₹{{this.offer_price}}</h5> 
                   </div>
           </div>
       {{else}}
       <div class="row">
                   <div class="col" >
         <h5> ₹{{this.price}}</h5>
                   </div>
                      
                 
           </div>

{{/if}}


                  </div>
            </div>




        </div>
        {{/each}}

    




    
    </div>
    </div>
</section>
